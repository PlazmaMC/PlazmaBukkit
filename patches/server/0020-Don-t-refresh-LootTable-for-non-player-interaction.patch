@@ -38,6 +38,7 @@ public class GlobalConfiguration extends ConfigurationPart {
 
         public boolean reduceRandom;
         public boolean ignoreThreadSafeRandom;
+        public boolean refreshLootTableForNonPlayerInteraction = !OPTIMIZE;
 
     }
 
